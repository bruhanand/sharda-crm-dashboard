# Django Settings
# Generate a secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (default for local development - leave DB_PASSWORD empty):
# DB_PASSWORD=

# For PostgreSQL (optional - uncomment and configure):
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=crm_database
# DB_USER=crm_user
# DB_PASSWORD=your_db_password_here
# DB_HOST=localhost
# DB_PORT=5432
# DB_SSL_MODE=prefer

# CORS Settings (for local development)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Logging
LOG_LEVEL=INFO

# Session Settings
SESSION_COOKIE_SAMESITE=Lax

