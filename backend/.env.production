# Django Backend - Production Environment (EC2)
# Copy this to .env for production: cp .env.production .env

# Django Core
DEBUG=False
SECRET_KEY=your-production-secret-key-change-this-to-secure-random-string
ALLOWED_HOSTS=15.207.55.179,3.110.37.29,localhost,127.0.0.1

# Database (PostgreSQL for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=crm_database
DB_USER=crm_user
DB_PASSWORD=your-db-password-here
DB_HOST=postgres
